{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/std:c++20",
				"/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build"
			},
			"detail": "Builds the active file into an exe."
		},
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build subfolder",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/std:c++20",
				"/Fe${workspaceFolder}\\${input:subfolder}\\main.exe",
				"${workspaceFolder}\\${input:subfolder}\\*.cpp"
			],
			"options": {
				"cwd": "{$workspaceFolder}\\${input:subfolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Builds the selected subproject."
		},
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build folder",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fe:${input:subfolder}\\${fileDirnameBasename}.exe",
				"*.cpp"
			],
			"options": {
				"cwd": "${input:subfolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Builds the selected subproject."
		}
	],
	"inputs": [
		{
			"id": "subfolder",
			"type": "pickString",
			"description": "Pick the subfolder project.",
			"options": [
				"string",
				"stringstream",
				"tree"
			],
			"default": "tree",
		}
	],
}