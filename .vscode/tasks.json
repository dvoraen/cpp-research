{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "compile active file",
			"detail": "Compiles the active file.",
			"type": "cppbuild",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/W4",
				"/c",
				"/nologo",
				"/std:c++20",
				"${file}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
		},
		{
			"label": "build active project",
			"detail": "Builds the active file's subfolder.",
			"type": "cppbuild",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/W4",
				"/nologo",
				"/std:c++20",
				"*.cpp"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": "$msCompile",
			"group": "build"
		},
		{
			"label": "build subfolder",
			"detail": "Builds the selected subproject.",
			"type": "cppbuild",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/W4",
				"/nologo",
				"/std:c++20",
				"/Femain.exe",
				"*.cpp"
			],
			"options": {
				"cwd": "${workspaceFolder}\\${input:subfolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"group": "build",
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "clean subfolder",
			"detail": "Removes build files from the subfolder.",
			"type": "shell",
			"windows": {
				// shell commands should have everything in the command string
				// per Tasks schema, don't use args except for "process" type Tasks
				"command": "rm -Path *.o, *.obj, *.pch, *.exe, *.pdb, *.ilk",
				"options": {
					"cwd": "${workspaceFolder}\\${input:subfolder}",
				},
			},
			"problemMatcher": [],
			"group": {
				"kind": "none",
			},
			"presentation": {
				"group": "build",
				"echo": false,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "rebuild subfolder",
			"detail": "Cleans then builds the subfolder.",
			"type": "shell",
			"command": "echo Rebuilding project '${input:subfolder}'",
			"group": "build",
			"dependsOn": [
				"clean subfolder",
				"build subfolder"
			],
			"dependsOrder": "sequence",
			"problemMatcher": [],
			"presentation": {
				"group": "build",
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		},
	],
	"inputs": [
		{
			"id": "subfolder",
			"type": "pickString",
			"description": "Pick the subfolder project.",
			"options": [
				"string",
				"stringstream",
				"tree"
			],
			"default": "tree",
		}
	],
}